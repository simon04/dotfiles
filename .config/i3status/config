general {
  colors = true
  interval = 1
}

order += "disk /"
order += "disk /home"
order += "sysdata cpu"
order += "sysdata mem"
order += "sysdata load"
order += "netdata"
order += "time"

disk "/" {
  format = "/ %free"
}

disk "/home" {
  format = "/home/ %free"
}

sysdata "cpu" {
  format = "[\?color=cpu CPU {cpu_usage}%]"
}

sysdata "mem" {
  format = "[\?color=mem Mem {mem_used}/{mem_total} GB ({mem_used_percent}%)]"
}

sysdata "load" {
  format = "[\?color=load L {load1} {load5}]"
}

netdata {
  format = "{nic} {down}kB/s↓ {up}kB/s↑"
}

time {
  format = "%Y-%m-%d %H:%M:%S"
}

